{
    "env": {
        "browser": true,
        "es6": true,
        "node": true,
        "mocha": true,
        "serviceworker": true
    },
    "globals": { 
        "workbox": true
    },
    "parser": "babel-eslint",
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 9,
        "sourceType": "module"
    },
    "rules": {
        "no-unused-vars": ["error", { "argsIgnorePattern": "^_", "varsIgnorePattern": "^_" }],
        "indent": [
            "error",
            4,
            {"SwitchCase": 1}
        ], 
        "eol-last": ["error", "always"],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "never"
        ],
        "react/jsx-uses-react": "error",
        "react/jsx-uses-vars": "error",
        "react-hooks/rules-of-hooks": "error",
        "react-hooks/exhaustive-deps": "off"
    },
    "plugins": [
        "babel",
        "react",
        "react-hooks"
    ]
}